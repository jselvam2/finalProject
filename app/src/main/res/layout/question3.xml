<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/musicapp">

    <TextView
        android:id="@+id/moodHype"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:text="Hype"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:fontFamily="@font/audiowide"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="357dp" />

    <TextView
        android:id="@+id/moodChill"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:text="Chill"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:fontFamily="@font/audiowide"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="443dp" />

    <TextView
        android:id="@+id/moodSad"
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:text="Sad"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:fontFamily="@font/audiowide"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="282dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textMultiLine|textLongMessage|textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:text="What is your current mood?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/moodA"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="193dp" />

    <Button
        android:id="@+id/moodB"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="279dp" />

    <Button
        android:id="@+id/moodC"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="358dp" />

    <Button
        android:id="@+id/moodD"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="436dp" />

    <TextView
        android:id="@+id/moodHappy"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:text="Happy"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:fontFamily="@font/audiowide"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="193dp" />

</android.support.constraint.ConstraintLayout>